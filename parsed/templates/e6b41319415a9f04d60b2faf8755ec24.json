{
  "components/halothemes/configure-options/set-select": "<div class=\"form-field\" data-product-attribute=\"set-select\">\r\n    <label class=\"form-label form-label--inlineSmall\" for=\"edit_attribute_select_{{id}}\">\r\n        {{ this.display_name }}\r\n\r\n        {{> components/common/requireness-msg}}\r\n        <span data-option-value></span>\r\n    </label>\r\n\r\n    <select class=\"form-select form-select--small\" name=\"attribute[{{this.id}}]\" id=\"edit_attribute_select_{{id}}\" {{#if required}}required{{/if}}>\r\n        <option value=\"\">{{lang 'products.choose_options'}}</option>\r\n        {{#each this.values}}\r\n            <option data-product-attribute-value=\"{{id}}\" value=\"{{id}}\" {{#if selected}}selected data-default{{/if}}>{{label}}</option>\r\n        {{/each}}\r\n    </select>\r\n</div>\n",
  "components/common/requireness-msg": "<small>\n    {{#if required}}*{{else}}{{lang 'common.optional'}}{{/if}}\n</small>\n"
}