{
  "components/halothemes/halo-book-an-appointment": "{{#if theme_settings.halo-book-an-appointment-title}}\r\n    <div class=\"modal-header\">\r\n        <h2 class=\"modal-header-title\">{{theme_settings.halo-book-an-appointment-title}}</h2>\r\n    </div>\r\n{{/if}}\r\n<div class=\"modal-body\">\r\n    <div id=\"halo-booking-results\" class=\"halo-booking-text\"></div>\r\n    <form class=\"halo-booking-form form\" id=\"halo-booking-form\">\r\n        <div class=\"form-row\">\r\n            <div class=\"form-field\">\r\n            \t<label class=\"form-label\" for=\"customer_name1\">Name*</label>\r\n                <input required type=\"text\" class=\"form-input\" name=\"customer_name1\" id=\"customer_name1\">\r\n            </div>\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"customer_name2\">Last Name*</label>\r\n                <input required type=\"text\" class=\"form-input\" name=\"customer_name2\" id=\"customer_name2\">\r\n            </div>\r\n        </div>\r\n        <div class=\"form-row\">\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"customer_phone1\">Phone number*</label>\r\n                <input required type=\"tel\" class=\"form-input\" name=\"customer_phone1\" id=\"customer_phone1\">\r\n            </div>\r\n            <div class=\"form-field\">\r\n            \t<label class=\"form-label\" for=\"customer_email1\">Email*</label>\r\n                <input required type=\"text\" class=\"form-input\" name=\"customer_email1\" id=\"customer_email1\">\r\n            </div>\r\n        </div>\r\n        <div class=\"form-row\">\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"customer_country\">Country*</label>\r\n                {{#if cart.shipping_handling.countries.length}}\r\n                    <select required class=\"form-select\" name=\"customer_country\" id=\"customer_country\" data-field-type=\"Country\">\r\n                        <option>Please select</option>\r\n                        {{#each cart.shipping_handling.countries}}\r\n                            <option value=\"{{id}}\">\r\n                                {{name}}\r\n                            </option>\r\n                        {{/each}}\r\n                    </select>\r\n                {{else}}\r\n                    <input required class=\"form-input\" name=\"customer_country\" id=\"customer_country\">\r\n                {{/if}}\r\n            </div>\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"customer_state\">State/province*</label>\r\n                {{#if states.length}}\r\n                    <select required class=\"form-select\" name=\"customer_state\" id=\"customer_state\" data-field-type=\"State\">\r\n                        <option>Please select</option>\r\n                        {{#each states}}\r\n                            <option value=\"{{id}}\">\r\n                                {{name}}\r\n                            </option>\r\n                        {{/each}}\r\n                    </select>\r\n                {{else}}\r\n                    <input required class=\"form-input\" name=\"customer_state\" id=\"customer_state\">\r\n                {{/if}}\r\n            </div>\r\n        </div>\r\n        <div class=\"form-row\">\r\n            <div class=\"form-field form-field-datepicker\">\r\n                <label class=\"form-label\" for=\"customer_date1\">Pick a date for your appointment*</label>\r\n                <input required type=\"text\" class=\"form-input\" name=\"customer_date1\" id=\"customer_date1\">\r\n            </div>\r\n            <div class=\"form-field form-field-datepicker\">\r\n                <label class=\"form-label\" for=\"customer_date2\">Day of your wedding*</label>\r\n                <input required type=\"text\" class=\"form-input\" name=\"customer_date2\" id=\"customer_date2\">\r\n            </div>\r\n        </div>\r\n        <div class=\"form-field form-field-textarea\">\r\n            <label class=\"form-label\" for=\"comment_area1\">Leave a comment</label>\r\n            <textarea name=\"comment_area1\" cols=\"30\" rows=\"6\" class=\"form-input\" id=\"comment_area1\"></textarea>\r\n        </div>\r\n        <div class=\"form-field form-field-radio form-field-radio2\">\r\n            <label class=\"form-label form-label-custom\">How would you like me to contact you?</label>\r\n            <input class=\"form-radio\" id=\"phone-radio-2\" type=\"radio\" name=\"type_contact1\" checked value=\"Phone\">\r\n            <label class=\"form-label\" for=\"phone-radio-2\">Phone</label>\r\n            <input class=\"form-radio\" id=\"email-radio-2\" type=\"radio\" name=\"type_contact1\" value=\"Email\">\r\n            <label class=\"form-label\" for=\"email-radio-2\">Email</label>\r\n            <input class=\"form-radio\" id=\"both-radio-3\" type=\"radio\" name=\"type_contact1\" value=\"Phone & Email\">\r\n            <label class=\"form-label\" for=\"both-radio-3\">Both</label>\r\n        </div>\r\n        <div class=\"form-field form-field-checkbox\">\r\n            <input type=\"checkbox\" id=\"term-ask-booking\" name=\"new\" value=\"Terms Conditions\">\r\n            <label class=\"form-label\" for=\"term-ask-booking\">\r\n                I agree with the <a class=\"link\" href=\"/privacy-policy/\">Data Protection Policy</a> for the Alita Bridal Make an Appointment Form\r\n            </label>\r\n        </div>\r\n        <div class=\"form-actions\">\r\n           <button type=\"button\" class=\"button button--primary\" id=\"halo-booking-button\" disabled>Submit</button>\r\n        </div>\r\n    </form>\r\n</div>\r\n"
}