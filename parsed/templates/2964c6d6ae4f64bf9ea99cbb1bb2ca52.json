{
  "components/halothemes/product/halo-notify-me-out-of-stock": "{{#if theme_settings.halo_notify_me}}\r\n    {{#if product.out_of_stock}}\r\n        <div class=\"productView-notifyMe\" data-product-title=\"{{product.title}}\" data-product-url=\"{{product.url}}\">\r\n            <form class=\"productView-notifyMe-form\" method=\"post\" action=\"\">\r\n                <div class=\"form-field\">\r\n                    <label class=\"form-label\" for=\"halo_notify_email\">{{theme_settings.halo_notify_me-text}}</label>\r\n                    <input class=\"form-input\" aria-required=\"true\" type=\"email\" name=\"email\" id=\"halo_notify_email\" placeholder=\"{{lang 'common.insert_email_address'}}\">\r\n                    <button type=\"button\" class=\"button button--primary\" id=\"halo_notify_submit\" disabled>{{lang 'common.email_submit'}}</button>\r\n                </div>\r\n                <div class=\"form-field form-field-checkbox\">\r\n                    <input class=\"form-checkbox\" type=\"checkbox\" id=\"term-out-of-stock\" name=\"term-out-of-stock\" value=\"Terms Conditions\">\r\n                    <label class=\"form-label\" for=\"term-out-of-stock\">\r\n                        I agree with the <span>Terms and conditions</span>\r\n                    </label>\r\n                </div>\r\n            </form>\r\n            <div class=\"productView-notifyMe-text\"></div>\r\n        </div>\r\n    {{/if}}\r\n{{/if}}\r\n"
}