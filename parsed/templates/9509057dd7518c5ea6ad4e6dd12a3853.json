{
  "components/halothemes/sidebar/halo-recent-articles": "{{#if theme_settings.halo-sidebar-recent-post}}\r\n    <div class=\"sidebarBlock\" id=\"recent-posts\">\r\n        {{#if theme_settings.halo-sidebar-recent-post-title}}\r\n            <h5 class=\"sidebarBlock-heading\">\r\n                <span>{{theme_settings.halo-sidebar-recent-post-title}}</span>\r\n            </h5>\r\n        {{/if}}\r\n        <div class=\"sidebarBlock-content\">\r\n        \t<div class=\"recentPosts-list\">\r\n        \t\t{{#each (limit post 3)}}\r\n        \t\t\t<div class=\"recentPosts-list-item\">\r\n                        <p class=\"date\">{{date_published}}</p>\r\n                        <h6 class=\"title\">\r\n                            <a href=\"{{url}}\" class=\"link\">\r\n                                <span class=\"text\">{{title}}</span>\r\n                            </a>\r\n                        </h6>\r\n        \t\t\t</div>\r\n        \t\t{{/each}}\r\n        \t</div>\r\n        </div>\r\n    </div>\r\n{{/if}}\r\n"
}