{
  "components/halothemes/popup/halo-newsletter-popup": "{{#if theme_settings.halo_newsletter_popup}}\r\n    <div id=\"halo-newsletter-popup\" class=\"halo-popup halo-newsletter-popup hide\">\r\n        <div class=\"newsletter-popup-container\">\r\n            <div class=\"newsletter-popup-inner\">\r\n                <button type=\"button\" data-close-newsletter-popup>\r\n                    <svg class=\"icon\" role=\"img\" aria-label=\"{{lang 'common.close'}}\">\r\n                        <title>{{lang 'common.close'}}</title>\r\n                        <desc>{{lang 'common.close'}}</desc>\r\n                        <use xlink:href=\"#icon-close\"></use>\r\n                    </svg>\r\n                </button>\r\n                <div class=\"newsletter-left\">\r\n                    <img class=\"lazyload\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/product_images/uploaded_images/{{theme_settings.halo_newsletter_popup_image}}\" alt=\"{{lang 'newsletter.subscribe'}}\" title=\"{{lang 'newsletter.subscribe'}}\">\r\n                </div>\r\n                <div class=\"newsletter-right\">\r\n                    <h2 class=\"newsletter-heading\">{{lang 'newsletter.subscribe'}}</h2>\r\n                    <div class=\"newsletter-message\">\r\n                        <span>{{lang 'newsletter.subscribe_intro'}}</span>\r\n                        <span>{{lang 'newsletter.subscribe_intro2'}}</span>\r\n                    </div>\r\n                    <div id=\"popupSubcribeForm\">\r\n                        <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\" id=\"popupSubcribeFormSubmit\">\r\n                            <fieldset class=\"form-fieldset\">\r\n                                <input type=\"hidden\" name=\"action\" value=\"subscribe\">\r\n                                <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\r\n                                <input type=\"hidden\" name=\"check\" value=\"1\">\r\n                                <div class=\"form-field\">\r\n                                    <label class=\"form-label is-srOnly\" for=\"nl_email2\">{{lang 'newsletter.email_placeholder'}}</label>\r\n                                    <input class=\"form-input\" id=\"nl_email2\" name=\"nl_email\" type=\"email\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\">\r\n                                    <input class=\"button button--primary button--large\" type=\"submit\" value=\"{{lang 'newsletter.subscribe_submit'}}\">\r\n                                </div>\r\n                            </fieldset>\r\n                        </form>\r\n                    </div>\r\n                    {{#if theme_settings.halo_newsletter_popup_again}}\r\n                        <div class=\"form-show-again\">\r\n                            <form class=\"form\">\r\n                                <div class=\"form-field form-field-checkbox\">\r\n                                    <input id=\"do-not-show-again\" class=\"do-not-show-again\" type=\"checkbox\" name=\"don't show again\" value=\"1\"> \r\n                                    <label class=\"form-label\" for=\"do-not-show-again\">\r\n                                        <span>{{lang 'newsletter.subscribe_dontshow'}}</span>\r\n                                    </label>\r\n                                </div>\r\n                            </form>\r\n                        </div>\r\n                    {{/if}}\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n{{/if}}\r\n"
}