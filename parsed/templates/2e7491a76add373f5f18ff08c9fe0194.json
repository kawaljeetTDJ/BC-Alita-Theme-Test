{
  "components/halothemes/configure-options/swatch": "<div class=\"form-field\" data-product-attribute=\"swatch\">\r\n    <label class=\"form-label form-label--inlineSmall\">\r\n        {{this.display_name}}\r\n\r\n        {{> components/common/requireness-msg}}\r\n        <span data-option-value></span>\r\n    </label>\r\n\r\n    {{#each this.values}}\r\n        <input class=\"form-radio\" type=\"radio\" name=\"attribute[{{../id}}]\" value=\"{{id}}\" id=\"edit_attribute_swatch_{{../id}}_{{id}}\" {{#if selected}}checked data-default{{/if}} {{#if ../required}}required{{/if}}>\r\n        <label class=\"form-option form-option-swatch\" for=\"edit_attribute_swatch_{{../id}}_{{id}}\" data-product-attribute-value=\"{{id}}\">\r\n            {{#if image}}\r\n                <span class='form-option-variant form-option-variant--pattern' title=\"{{this.label}}\" style=\"background-image: url('{{getImage image \"swatch_option_size\"}}');\"></span>\r\n            {{/if}}\r\n            {{#if data.[2]}}\r\n                <span class='form-option-variant form-option-variant--color form-option-variant--color2' title=\"{{this.label}}\">\r\n                    <span style=\"background-color: #{{data.[0]}}\"></span>\r\n                    <span style=\"background-color: #{{data.[1]}}\"></span>\r\n                    <span style=\"background-color: #{{data.[2]}}\"></span>\r\n                </span>\r\n            {{else}}\r\n                {{#if data.[1]}}\r\n                    <span class='form-option-variant form-option-variant--color form-option-variant--color2' title=\"{{this.label}}\">\r\n                        <span style=\"background-color: #{{data.[0]}}\"></span>\r\n                        <span style=\"background-color: #{{data.[1]}}\"></span>\r\n                    </span>\r\n                {{else}}\r\n                    {{#if data.[0]}}\r\n                        <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\r\n                    {{/if}}\r\n                {{/if}}\r\n            {{/if}}\r\n            {{#if pattern}}\r\n                <span class=\"form-option-expanded\">\r\n                    <span class=\"form-option-image\" style=\"background-image: url('{{getImage image 'core-swatch'}}');\"></span>\r\n                </span>\r\n            {{/if}}\r\n        </label>\r\n    {{/each}}\r\n</div>\r\n",
  "components/common/requireness-msg": "<small>\n    {{#if required}}*{{else}}{{lang 'common.optional'}}{{/if}}\n</small>\n"
}