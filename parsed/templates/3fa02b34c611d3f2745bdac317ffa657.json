{
  "components/products/add-to-cart": "<div class=\"alertBox alertBox--error productAttributes-message\" style=\"display:none\">\n    <div class=\"alertBox-column alertBox-icon\">\n        <svg class=\"icon\"><use xlink:href=\"#icon-info\"></use></svg>\n    </div>\n    <p class=\"alertBox-column alertBox-message\"></p>\n</div>\n<div class=\"productView-actions\">\n    {{#if theme_settings.show_product_quantity_box}}\n        <div class=\"form-field form-field--increments\">\n            <label class=\"form-label\" for=\"qty[]\">{{lang 'products.quantity'}}</label>\n            <div class=\"form-increment\" data-quantity-change>\n                <input class=\"form-input form-input--incrementTotal\"\n                    id=\"qty[]\"\n                    name=\"qty[]\"\n                    type=\"number\"\n                    value=\"{{#if product.min_purchase_quantity}}{{product.min_purchase_quantity}}{{else}}1{{/if}}\"\n                    data-quantity-min=\"{{product.min_purchase_quantity}}\"\n                    data-quantity-max=\"{{product.max_purchase_quantity}}\"\n                    min=\"1\"\n                    pattern=\"[0-9]*\"\n                    aria-live=\"polite\">\n            </div>\n        </div>\n    {{/if}}\n    {{#all layout sticky}}\n        <div class=\"form-actionFix{{#unless theme_settings.show_product_quantity_box}} form-actionFix2{{/unless}}\">\n    {{/all}}\n        {{#or customer (if theme_settings.restrict_to_login '!==' true)}}\n            <div class=\"form-action{{#unless theme_settings.show_product_quantity_box}} form-action2{{/unless}}\" role=\"status\" aria-live=\"polite\">\n                <input id=\"form-action-addToCart\" data-wait-message=\"{{lang 'products.adding_to_cart'}}\" class=\"button button--primary\" type=\"submit\"\n                    value=\"{{#if product.pre_order}}{{lang 'products.pre_order'}}{{else}}{{lang 'products.add_to_cart'}}{{/if}}\">\n            </div>\n        {{else}}\n            <div class=\"form-action{{#unless theme_settings.show_product_quantity_box}} form-action2{{/unless}}\">\n                <span class=\"form-action-text\">\n                    <span class=\"text\">{{lang 'common.restrict_to_login'}}</span>\n                </span>\n            </div>\n        {{/or}}\n    {{#all layout sticky}}\n        </div>\n    {{/all}}\n</div>\n{{#or customer (if theme_settings.restrict_to_login '!==' true)}}\n    {{#if theme_settings.halo_buy_it_now}}\n        <div class=\"productView-actions productView-actions--buyItNow\">\n            <div class=\"form-action form-action--buyItNow\">\n                <input id=\"form-action-buyItNow\" data-wait-message=\"{{lang 'products.adding_to_cart'}}\" class=\"button button--secondary button--transparent-2 button--buyItNow\" type=\"submit\"\n                value=\"{{lang 'products.buy_it_now'}}\">\n            </div>\n        </div>\n    {{/if}}\n{{/or}}\n"
}